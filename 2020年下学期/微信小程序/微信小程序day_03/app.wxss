/**app.wxss**/
@import "./styles/iconfont.wxss";

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 清除默认样式  */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

page {
  /* 定义主题颜色 */
  --themeColor: #c00000;
  /*
    定义统一字体大小 
     */
  font-size: 28rpx;
  padding-top: 80rpx;
}

image {
  width: 100%;
  height: 100%;
}