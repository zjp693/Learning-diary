/* pages/details/details.wxss */
.context {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 20px;
  padding-right: 20px;
  background: #ffffff;
}

.context .title {
  line-height: 40px;
  font-size: 40rpx;
  margin-bottom: 20px;
}

.context .title::before {
  content: "";
  position: absolute;
  top: 80px;
  width: 30px;
  height: 2px;
  background: chartreuse;
}

.context .icon {
  float: left;
}

.context .icon image {
  width: 12px;
  height: 12px;
}

.context .icon_1 {
  margin-top: 10px;
  margin-left: 20px;
}

.context view:nth-child(1) {
  margin-top: 10px;
  display: block;
  /* line-height: 52px; */

}

.context .date {
  float: right;
  margin-top: 10px;
}

.data {
  display: block;
  margin: 20px 0;
  height: 20px;
}

.details {
  margin-top: 30px;
  font-size: 14px;
}

.details image {
  display: block;
}

.icon_title image:nth-child(1) {
  position: absolute;
  top: 0px;
  right: 31px;
  width: 14px;
  height: 14px;
}

.icon_title image:nth-child(2) {
  position: absolute;
  right: 31px;
  top: 20px;
  width: 14px;
  height: 14px;
}

.empty {
  display: block;
  width: 100%;
  height: 10px;
  background: #f7f7f8;
  padding: 0 20px;
  margin: 0 -20px;
}

.details image {
  width: 335px;
}

.white {
  display: block;
  width: 100%;
  height: 25px;
  background: white;
}