<!DOCTYPE html>
<html>

<head>
  <title></title>
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/Css/bootstrap.css" />
  <link rel="stylesheet" type="text/css" href="/Css/bootstrap-responsive.css" />
  <link rel="stylesheet" type="text/css" href="/Css/style.css" />
  <style type="text/css">
    body {
      padding-bottom: 40px;
    }

    .sidebar-nav {
      padding: 9px 0;
    }

    @media (max-width: 980px) {

      /* Enable use of floated navbar text */
      .navbar-text.pull-right {
        float: none;
        padding-left: 5px;
        padding-right: 5px;
      }
    }
  </style>
</head>

<body>
  <form class="form-inline definewidth m20" id="filterForm">
    用户名称：
    <input type="text" name="username" id="username" class="abc input-default" placeholder="" value="">&nbsp;&nbsp;
    机构名称：
    <input type="text" name="gname" id="" class="abc input-default" placeholder="" value="">&nbsp;&nbsp;
    <button type="submit" class="btn btn-primary" id="filterBtn">查询</button>&nbsp;&nbsp; <button type="button"
      class="btn btn-success" id="addnew" onclick="location.href='/user/add'">新增用户</button>
  </form>
  <table class="table table-bordered table-hover definewidth m10">
    <thead>
      <tr>
        <th>序号</th>
        <th>用户名称</th>
        <th>机构名称</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <!-- <tr>
        <td>2</td>
        <td>admin</td>
        <td></td>
        <td>
          <a href="#">编辑</a> &nbsp; &nbsp
          <a href="#">删除</a>
        </td>
      </tr> -->
      <% for(var i = 0; i < data.length; i++) { %>
      <tr>
        <td><%- data[i].id %></td>
        <td><%- data[i].username %></td>
        <td><%- data[i].gname %></td>
        <td>
          <a href="#" data-id="<%- data[i].id %>">编辑</a> &nbsp; &nbsp
          <a href="#" data-id="<%- data[i].id %>" id="deleteBtn">删除</a>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <!-- <script type="text/javascript" src="/Js/jquery.js"></script>
  <script type="text/javascript" src="/Js/jquery.sorted.js"></script>
  <script type="text/javascript" src="/Js/bootstrap.js"></script>
  <script type="text/javascript" src="/Js/ckform.js"></script>
  <script type="text/javascript" src="/Js/common.js"></script> -->

  <script src="/lib/jquery.min.js"></script>
  <script src="/lib/bootstrap.min.js"></script>
  <script src="/lib/template.js"></script>
  <script type="text/template" id="listtempl">
    {{ each data}}
    <tr>
      <td>{{$value.id}}</td>
      <td>{{$value.username}}</td>
      <td>{{$value.gname}}</td>
      <td>
        <a href="#" data-id="{{$value.id}}">编辑</a> &nbsp; &nbsp
        <a href="#" data-id="{{$value.id}}">删除</a>
      </td>
    </tr>
    {{ /each }}
  </script>
  <script src="/Js/userIndex.js"></script>
</body>

</html>